<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="com.yazidmf.streamingradioislami.AboutApp">

        <Button
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:textAllCaps="true"
            android:background="@drawable/topbar" />

        <Button
            android:id="@+id/tabRadio"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/topbar"
            android:onClick="btn_main"
            android:text="Radio"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/tabAbout"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/tab"
            android:text="Tentang"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true" />

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="65dp"
                            app:srcCompat="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/rs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/logo"
                            android:layout_marginLeft="10dp"
                            android:text="Radio Islam"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/copyright"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rs"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:text="Â© 2018 Yazid M.F."
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/copyright"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:text="All rights reserved."
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/versi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/all"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:text="Version: 1.0 Beta"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/penjelasan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/versi"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:text="Dengan bertujuan menebar dakwah Islam yang rahmatan 'lil 'alamin sesuai dengan pemahaman dan jalan para shahabat radiyallaahu anhum jami'an, tabi'in, tabi'ut tabi'in, Radio Islam hadir untuk seluruh kaum muslimin di nusantara dan mancanegara."
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/perhatian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/penjelasan"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:text="PERHATIAN:"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/satu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/perhatian"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="1. Fitur utama Radio Islam adalah streaming audio yang menggunakan paket data internet."
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/dua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/satu"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="2. Biasakan menyiapkan alat tulis dan mencatat faidah-faidah dari kajian yang Anda simak sehingga manfaat ilmunya bisa lebih terdokumentasikan dengan baik."
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tiga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dua"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginRight="10dp"
                            android:text="3. Radio Islam Indonesia hanya sebagai sarana mendengarkan kajian kapan dan dimanapun Anda berada, tetapi lebih afdhal bagi Anda untuk hadir langsung di majlis-majlis ilmu dan kajian yang terdekat di kota Anda."
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/empat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tiga"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="4. Radio Islam Bisa berjalan mulai dari Android API 14 (IceCreamSandwich) hingga API 25 (Nougat)."
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                </RelativeLayout>
        </ScrollView>
</RelativeLayout>